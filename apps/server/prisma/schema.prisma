generator client {
  provider        = "prisma-client"
  previewFeatures = ["driverAdapters"]
  output          = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum AuthProvider {
  GOOGLE
  NAVER
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  name         String?
  profileImage String?

  isEmailAgreed Boolean @default(false)
  isPushAgreed  Boolean @default(false)
  pushToken     String?

  provider   AuthProvider
  providerId String

  refreshTokens RefreshToken[]
  notes         Note[]

  sentFriendships     Friendship[] @relation("sentFriendships")
  receivedFriendships Friendship[] @relation("receivedFriendships")
  invitations         Invitation[] @relation("sentInvitations")
  usedInvitations     Invitation[] @relation("receivedInvitations")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerId])
}

model Friendship {
  id          String           @id @default(cuid())
  requesterId String
  requester   User             @relation("sentFriendships", fields: [requesterId], references: [id], onDelete: Cascade)
  addresseeId String
  addressee   User             @relation("receivedFriendships", fields: [addresseeId], references: [id], onDelete: Cascade)
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@unique([requesterId, addresseeId])
  @@index([requesterId])
  @@index([addresseeId])
}

model Invitation {
  id        String    @id @default(cuid())
  inviterId String
  inviter   User      @relation("sentInvitations", fields: [inviterId], references: [id], onDelete: Cascade)
  code      String    @unique
  usedById  String?
  usedBy    User?     @relation("receivedInvitations", fields: [usedById], references: [id])
  usedAt    DateTime?
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([inviterId])
  @@index([code])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model Note {
  id         String     @id @default(cuid())
  title      String?
  content    String
  userId     String
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  visibility Visibility @default(FRIENDS)
  feeling    Feeling?

  @@index([userId])
}

enum Visibility {
  PRIVATE
  FRIENDS
}

model Feeling {
  id     String @id @default(cuid())
  noteId String @unique
  note   Note   @relation(fields: [noteId], references: [id], onDelete: Cascade)

  status       FeelingStatus @default(Pending)
  errorMessage String?
  retryCount   Int           @default(0)

  primaryEmotion      Emotion?
  primaryIntensity    Float?
  secondary1Emotion   Emotion?
  secondary1Intensity Float?
  secondary2Emotion   Emotion?
  secondary2Intensity Float?

  analyzedAt   DateTime?
  modelVersion String?

  @@map("feelings")
}

enum FeelingStatus {
  Pending
  Completed
  Failed
}

enum Emotion {
  Joy
  Excitement
  Gratitude
  Hope
  Pride
  Love
  Peace
  Contentment
  Relief
  Serenity
  Anxiety
  Fear
  Anger
  Panic
  Frustration
  Sadness
  Guilt
  Shame
  Loneliness
  Depression
  Hopelessness
  Boredom
}
