{
  "name": "nila",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "server": "yarn workspace @nila/server dev",
    "mobile": "yarn workspace @nila/mobile start",
    "build:types": "yarn workspace @nila/types build",
    "build:server": "yarn workspace @nila/server build",
    "build": "yarn build:types && yarn build:server",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0"
  }
}
